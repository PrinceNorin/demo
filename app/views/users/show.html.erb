<% provide :title, 'Profile' %>

<div id="profile" class="span8 offset2">
  <div class="row">
    <div class="span4">
      <%= gravatar_for @user, 200 %>
    </div>
    <div class="span4">
      <%= content_tag :p, "Name: #{@user.name}" %>
      <%= content_tag :p, "Email: #{@user.email}" %>
      <%= content_tag :p, "Member since: #{@user.created_at.strftime('%b %d, %y')}" %>
      <%= render 'shared/follow_status', user: @user %>
      <% unless current_user == @user %>
        <div id="follow_form">
          <% if current_user.following? @user %>
            <%= render 'unfollow' %>
          <% else %>
            <%= render 'follow' %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>